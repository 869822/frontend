---
import FriendItem from "./FriendItem.astro";
---
<head>
  <meta charset="UTF-8">
</head>
<div class="friends-container">
  <div class="header">
    <a href="../" class="button">
      <img src="/images/volver.png" alt="Volver" />
    </a>    
    <h2 class="title">AMIGOS</h2>
  </div>
  
  <div class="tabs">
    <h3 class="title">Lista de amigos</h3>
    <button class="tab active">
      Solicitudes <img src="/images/amigos/aceptar_amigos.png" alt="Solicitudes" />
      <span class="badge">3</span>
    </button>
    <button class="tab">
      A침adir amigos <img src="/images/amigos/agregar_amigos.png" alt="A침adir" />
    </button>
  </div>

  <div class="friends-list">
    <h3>Lista de amigos</h3>
    <FriendItem name="Hector" status="En l칤nea hace 5 horas" />
    <FriendItem name="David" status="En l칤nea hace 8 horas" />
    <FriendItem name="Daniel" status="En l칤nea hace 9 horas" />
    <FriendItem name="Hugo" status="En l칤nea hace 13 horas" />
  </div>
</div>

<style>
/* 游댳 Asegurar que el fondo cubre toda la pantalla */
body, html {
  margin: 0;
  padding: 0;
  height: 100%;
  background: #2c0045; /* Color de fondo general */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 游댳 Ajuste para que el contenedor no deje espacios en la parte superior/inferior */
.friends-container {
  width: 90%;
  max-width: 900px;
  min-height: 90vh; /* Al menos el 90% de la pantalla */
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: rgba(44, 0, 69, 0.9); /* Fondo semitransparente */
  align-items: center; /* Centrado vertical */
}

/* 游댳 TABS en tres columnas */
.tabs {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr; /* Tres columnas iguales */
  align-items: center;
  background: #3e005a;
  border-radius: 10px;
  padding: 10px;
  margin-bottom: 20px;
  width: 145%;
}

/* 游댳 Primera columna: "Lista de amigos" alineado a la izquierda */
.tabs .title {
  text-align: left;
  margin-left: 20px; /* Ajuste de margen */
}

/* 游댳 Botones ocupan sus respectivas columnas */
.tab {
  background: #57257a;
  color: white;
  border: none;
  font-size: 14px; /* Tama침o de letra m치s compacto */
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 8px; /* Espaciado reducido */
  padding: 6px 10px; /* Menos padding para reducir el fondo */
  border-radius: 12px;
  transition: background 0.3s ease;
  justify-content: center;
  min-width: 12px; /* Ancho m칤nimo del bot칩n */
  width: 150px;
  justify-self: end;
}

.tab img {
  width: 24px;
}

/* 游댳 BADGE */
.badge {
  background: green;
  color: white;
  padding: 3px 6px;
  border-radius: 50%;
  font-size: 12px;
}

/* 游댳 LISTA DE AMIGOS */
.friends-list {
  background: #666;
  padding: 20px; /* M치s espacio interno */
  border-radius: 10px;
  text-align: left;
  width: 200%; /* Ocupar todo el ancho disponible */
  max-width: 900px; /* Ajusta el tama침o m치ximo si es necesario */
}

/* 游댳 T칤tulo "AMIGOS" estilizado */
.title {
  color: white;
  font-size: 28px;
  font-weight: bold;
  text-align: center;
  flex-grow: 1; /* Permite que el t칤tulo ocupe todo el espacio posible */
  margin: 0; /* Elimina m치rgenes que puedan afectar el centrado */
}

/* 游댳 Contenedor del bot칩n y el t칤tulo */
.header {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center; /* Centra horizontalmente */
  margin-bottom: 20px;
  position: relative;
}

/* 游댳 Bot칩n de volver */
.button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px;
  display: flex;
  align-items: center;
  transition: 0.3s;
  position: absolute;
  left: 0; /* Lo mantiene alineado a la izquierda */
  margin-left: -130px;
}

.button img {
  width: 35px; /* Ajusta el tama침o del icono */
}

.button:hover {
  opacity: 0.7;
}

@media (max-width: 1200px) {
  .friends-container {
    width: 90%;
  }
}

@media (max-width: 768px) {
  .friends-container {
    width: 95%;
    padding: 15px;
  }

  .tabs {
    grid-template-columns: 1fr; /* En pantallas peque침as, cambia a una sola columna */
    gap: 10px; /* Espacio entre los elementos */
  }

  .tab {
    font-size: 14px;
  }
}
</style>
